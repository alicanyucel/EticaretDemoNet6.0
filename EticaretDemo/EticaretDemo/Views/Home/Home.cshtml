@using EticaretDemo.Dtos;
@model HomeDto;
@{
    var urunler = TempData["urunler"];
    int id = 0;
}
<style>
    img {
        width: 180px;
        height: 100px;
    }
</style>
<div class="row">
    <div class="col-md-8">
        <div class="row">
            @foreach (var item in Model.Urunlerim)
            {
                <div class="col-md-5 mx-2">
                    <div class="form-group text-center">
                        <img src="@item.Resim" alt="Resim yok" />
                    </div>
                    <h3 class="text-primary" style="font-weight:400;">@item.Adi</h3>
                    <h3 class="text-danger" style="font-weight:400;">@item.BirimFiyat.ToString()tl</h3>
                    <div class="form-group text-center mt-2">
                        <button class="btn btn-primary btn-block">Sepete ekle</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-4">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ürün Adı</th>
                    <th>Adet</th>
                    <th>Birim Fiyatı</th>
                    <th>Toplam tutar</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                   
                    @foreach (var item in Model.Sepetim)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Adi</td>
                        <td>@item.Adet</td>
                        <td>@item.BirimFiyat.ToString("#,##0.00")</td>
                        <td>@item.Toplam.ToString("#,##0.00")</td>
                        <td>
                            <button class="btn btn-danger mt-2">Sil</button>
                        </td>

                    </tr>
                    }
            </tbody>
        </table>
        <hr />
        <label class="form-control">Toplam Tutar</label>
        <button class="btn btn-warning mt-2">ödeme yap</button>
    </div>
</div>



